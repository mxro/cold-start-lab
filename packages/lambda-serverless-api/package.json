{
  "name": "lambda-serverless-api",
  "version": "1.0.0",
  "description": "API build from multiple Lambdas behind an API gateway",
  "license": "",
  "author": "",
  "sideEffects": false,
  "main": "src/module.ts",
  "scripts": {
    "analyse": "esbuild --bundle src/routes/dynamodb.ts --outfile=distLambda/dynamodb/lambda.js --minify --analyze",
    "build": "template build",
    "build-ts": "yarn template-ts build",
    "clean": "rimraf ./dist && rimraf distLambda",
    "compile": "tsc --build",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "deploy": "yarn build && template deploy \"$@\"",
    "deploy-ts": "yarn build-ts && yarn template-ts deploy",
    "infra": "template infra \"$@\"",
    "start": "PORT=5054 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local ts-node scripts/start.ts",
    "template": "template",
    "template-ts": "ts-node scripts/template.ts",
    "test": "yarn test-ci --watch",
    "test-ci": "TEST_SERVER_PORT=50321 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local jest --passWithNoTests --config=jest.config.js --runInBand",
    "watch": "PORT=5054 CORS=http://localhost:3000 GOLDSTACK_DEPLOYMENT=local ts-node-dev --respawn ./scripts/start.ts"
  },
  "dependencies": {
    "date-fns": "^2.28.0",
    "dynamodb": "workspace:^",
    "s3": "workspace:^",
    "source-map-support": "^0.5.21",
    "timings": "workspace:^"
  },
  "devDependencies": {
    "@goldstack/template-lambda-api": "0.4.39",
    "@goldstack/utils-aws-http-api-local": "0.1.30",
    "@jest-mock/express": "^1.4.5",
    "@types/aws-lambda": "^8.10.88",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@types/node-fetch": "2",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.1",
    "esbuild": "^0.14.34",
    "find-free-port": "^2.0.0",
    "jest": "^28.1.0",
    "node-fetch": "2.6.7",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
